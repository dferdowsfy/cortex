{
  "name": "complyze-proxy-validation-harness",
  "version": "1.0.0",
  "description": "Automated proxy validation test harness for the Complyze local proxy system",
  "private": true,
  "scripts": {
    "test": "npm run test:all",
    "test:all": "npm run test:domains && npm run test:api && npm run test:attachments && npm run test:bypass && npm run test:discovery",
    "test:domains": "node ../tests/domain.test.js",
    "test:api": "node ../tests/api.test.js",
    "test:attachments": "node ../tests/attachments.test.js",
    "test:bypass": "node ../tests/bypass.test.js",
    "test:discovery": "node ../tests/endpoint-discovery.js",
    "test:report": "node scripts/aggregate-reports.js",
    "install:browsers": "npx playwright install chromium",
    "pretest": "node scripts/preflight.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "dotenv": "^16.4.5",
    "http-proxy-agent": "^7.0.2",
    "https-proxy-agent": "^7.0.6",
    "jszip": "^3.10.1",
    "mammoth": "^1.8.0",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "playwright": "^1.49.1",
    "unzipper": "^0.12.3",
    "ws": "^8.18.0"
  },
  "optionalDependencies": {
    "canvas": "^3.1.0",
    "tesseract.js": "^5.1.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0"
  }
}
